<form class="signup-form">
  <div class="form-group col-3">
    <label for="username-signup">Username:</label>
    <input type="text" id="username-signup" class="form-control"/>
  </div>
  <div class="form-group col-3">
    <label for="email-signup">Email:</label>
    <input type="text" id="email-signup" class="form-control"/>
  </div>
  <div class="form-group col-3">
    <label for="password-signup">Password:</label>
    <input type="password" id="password-signup" class="form-control"/>
  </div>
  <div>
    <button type="submit" class="btn btn-light">Signup</button>
  </div>
</form>

<script src="/javascript/signup.js"></script>