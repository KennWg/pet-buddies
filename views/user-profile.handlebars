{{!-- Page when user clicks on another user profile --}}

{{!-- Other user information --}}
<section>
    <h1>Username:  {{username}}</h1>
    <h2>Email:  {{email}}</h2>
    <p>Address:  {{address}} - {{city}}</p>
</section>


{{!-- Populates their pet info --}}
{{#if pets.length}}
<section>
  <h2>User Pets:</h2>
  <ol>
    {{#each pets as |pet|}}
    <li>
      {{> pet-info pet}}
    </li>
    {{/each}}
  </ol>
  {{else}}
  <h5 class="pb-4 text-center mb-2">No pets for this user!</h5>
</section>
{{/if}}